---
export interface Props {
  lang: string;
  tags?: string[];
}

const { lang, tags } = Astro.props;
---

{
  !!tags && (
    <ul class="block m-0 p-0 mb-[0.25em]">
      {tags.map((tag) => (
        <li class="inline-block text-sm p-0 m-0 mr-2">
          <a href={`/${lang}/tags/${tag}`}>{`#${tag}`}</a>
        </li>
      ))}
    </ul>
  )
}
