---
import Nav from './Nav.astro';
import DarkModeToggle from './DarkModeToggle.astro';
// import ThemeSwitcher from './ThemeSwitcher.astro';
import LangSwitcher from './LangSwitcher.astro';
import { languages } from 'src/i18n';
---

<header class="">
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <Nav />
  <div
    class="justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    <LangSwitcher class="ml-4" languages={languages} />
  </div>
  <!-- <ThemeSwitcher class="ml-4" /> -->
  <DarkModeToggle />
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
