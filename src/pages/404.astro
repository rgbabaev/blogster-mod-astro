---
import PageMeta from '../components/PageMeta.astro';
import PageLayout from '../layouts/PageLayout.astro';
import { SITE_TITLE } from '../config';
---

<PageLayout>
  <PageMeta title={`Wrong address ${SITE_TITLE}`} slot="meta" />
  <Fragment slot="main">
    <h1 class="m-0 mb-[0.25em] text-4xl font-bold">
      <span
        class="pl-6 relative block leading-[150%] after:absolute after:content-[''] after:w-2 after:h-full after:top-0 after:left-0 after:bg-primary-green"
      >
        Error 404
      </span>
    </h1>
    <p>Page not found.</p>
    <p><a href="/">Go to the main page</a>.</p>
  </Fragment>
</PageLayout>
